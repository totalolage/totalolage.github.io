---
import "@styles/mdx.css";

import DefaultLayout  from "@layouts/default.astro";

import type { MarkdownLayoutProps } from "astro";

export type Props = MarkdownLayoutProps<Record<string, string>>;

const {
  frontmatter: { title },
} = Astro.props;
---

<DefaultLayout title={title} verticalAlign="center" footer>
  <article class="markdown-body place-self-center w-[120ch] max-w-full rounded-3xl sm:px-12 sm:pb-20 sm:pt-12 px-4 pb-6 pt-5 text-lg shadow-lg print:contents print:text-sm">
    <slot />
  </article>
</DefaultLayout>
